<h1>Listing rsvps</h1>

<table>
  <thead>
    <tr>
      <th>Invited guest name</th>
      <th>Plus one?</th>
      <th>Plus one name</th>
      <th>Meal</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= rsvp.invited_guest_name %></td>
        <td><%= rsvp.plus_one? %></td>
        <td><%= rsvp.plus_one_name %></td>
        <td><%= rsvp.meal %></td>
        <td><%= link_to 'Show', rsvp %></td>
        <td><%= link_to 'Edit', edit_rsvp_path(rsvp) %></td>
        <td><%= link_to 'Destroy', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

